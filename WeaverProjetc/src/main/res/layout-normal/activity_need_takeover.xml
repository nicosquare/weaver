<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NeedTakeoverActivity">

    <!-- Login form -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ra_nombre"
        android:paddingLeft="180dp"
        android:paddingRight="10dp"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:id="@+id/imageOrigin"
        android:src="@drawable/van_stucked"
        android:layout_alignTop="@+id/textOrigin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textOrigin"
        android:text="@string/search_origin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="120px"
        android:layout_marginTop="35dp" />

    <EditText
        android:id="@+id/originDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_origin"
        android:layout_below="@+id/textOrigin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <requestFocus />
    </EditText>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageGoal"
        android:src="@drawable/map"
        android:layout_alignTop="@+id/textGoal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textGoal"
        android:text="@string/search_goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/originDetail"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/textOrigin"
        android:layout_alignStart="@+id/textOrigin" />

    <EditText
        android:id="@+id/goalDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_goal"
        android:layout_below="@+id/textGoal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    </EditText>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageTime"
        android:src="@drawable/clock"
        android:layout_alignTop="@+id/textTimeStimate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textTimeStimate"
        android:text="@string/search_time_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignRight="@+id/goalDetail"
        android:layout_alignEnd="@+id/goalDetail"
        android:layout_below="@+id/goalDetail"
        android:layout_alignLeft="@+id/textGoal"
        android:layout_alignStart="@+id/textGoal" />

    <EditText
        android:id="@+id/timeStimate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_time_detail"
        android:layout_below="@+id/textTimeStimate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <requestFocus />
    </EditText>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageVan"
        android:src="@drawable/plus"
        android:layout_alignTop="@+id/textNeedTakeover"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textNeedTakeover"
        android:text="@string/search_takeover_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/timeStimate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/textTimeStimate"
        android:layout_alignStart="@+id/textTimeStimate" />

    <EditText
        android:id="@+id/takeoverDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_takeover_detail"
        android:layout_below="@+id/textNeedTakeover"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    </EditText>

    <ImageView
        android:layout_width="68dp"
        android:layout_height="50dp"
        android:id="@+id/imageTakeover"
        android:src="@drawable/van_return"
        android:layout_alignTop="@+id/askTakeover"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_ask_takeover"
        android:id="@+id/askTakeover"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="150px"
        android:layout_marginBottom="0dp" />

</RelativeLayout>
